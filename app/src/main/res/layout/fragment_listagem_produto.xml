<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.cadastros.produto.ListagemProdutoFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_lista_cadastro_produto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        tools:listitem="@layout/list_item_cadastro_produto"
        app:layout_constraintBottom_toTopOf="@+id/btn_cadastrar_produto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_aviso_sem_produto"
        style="@style/textoSemCadastros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_sem_cadastro_produto"
        app:layout_constraintBottom_toTopOf="@+id/btn_cadastrar_produto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_cadastrar_produto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/label_btn_novo_cadastro_produto"
        style="@style/botaoNovoCadastro"
        app:icon="@drawable/ic_cadastro_novo"
        app:iconTint="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>